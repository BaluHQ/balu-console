<!DOCTYPE html>
<html class="no-js" lang="en">
  <head>
      <% include partials/header %>
  </head>
  <body>

      <% include partials/bodytop %>

      <div class="row">
        <div class="large-4 columns end">
          <h4>Sign in to the Balu Console</h4>
        </div>
      </div>
      <form action="login" method="POST">
        <div class="row">
          <div class="large-4 columns">
            <label>Email
              <input type="text" id="fieldLogInEmail" name="email" placeholder="Email" required>
            </label>
          </div>
          <div class="large-4 columns end">
            <label>Password
              <input type="password" id="fieldLogInPassword" name="password" placeholder="Password" required>
            </label>
          </div>
        </div>
        <div class="row">
          <div class="large-4 columns end">
            <input id="logInUserButton" class="button radius" type="submit" value="Log In">
          </div>
        </div>
        <div class="row">
          <div class="large-8 columns end">
            <p><%= errorMessage %></p>
          </div>
        </div>
      </form>

      <footer>
          <% include partials/footer %>
      </footer>

      <% include partials/bodytail %>

  </body>
</html>
